  m_challenge.c \
  m_close.c \
  m_connect.c \
  m_cryptlink.c \
  m_dmem.c \
  m_drop.c \
  m_encap.c \
  m_eob.c \
  m_gline.c \
  m_info.c \
  m_invite.c \
  m_ison.c \
  m_join.c \
