#
RM            = @RM@
MV            = @MV@
INSTALL       = @INSTALL@
INSTALL_DATA  = @INSTALL_DATA@
prefix        = @prefix@
messagedir    = @prefix@/messages

LANGFILES     = ayb.lang            \
                custom.lang         \
                ircd-croatian.lang  \
                ircd-danish.lang    \
                ircd-dutch.lang     \
                ircd-german.lang    \
                ircd-norwegian.lang \
                ircd-russian.lang   \
                ircd-spanish.lang   \
                ircd-swedish.lang


install-mkdirs:
	-@if test ! -d $(prefix); then      \
                echo "mkdir $(prefix)";     \
                mkdir $(prefix);            \
        fi

	-@if test ! -d $(messagedir); then  \
		echo "mkdir $(messagedir)"; \
		mkdir $(messagedir);        \
	fi;

install: install-mkdirs
	-@echo    "Installing language files to $(messagedir)...";          \

	@for i in $(LANGFILES); do                                          \
		if test -f $(messagedir)/$$i; then                          \
			echo $(MV) $(messagedir)/$$i $(messagedir)/$$i.old; \
			$(MV) $(messagedir)/$$i $(messagedir)/$$i.old;      \
		fi;                                                         \
		echo $(INSTALL_DATA) $$i $(messagedir);                     \
		$(INSTALL_DATA) $$i $(messagedir);                          \
	done

distclean:
	${RM} -f Makefile

build:

depend:

clean:
