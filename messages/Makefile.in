#
RM            = @RM@
MV            = @MV@
INSTALL       = @INSTALL@
INSTALL_DATA  = @INSTALL_DATA@
prefix        = @prefix@
messagedir    = @prefix@/messages
CLOBBER       = @CLOBBER@

LANGFILES     = ayb.lang            \
                custom.lang         \
                ircd-croatian.lang  \
                ircd-danish.lang    \
                ircd-dutch.lang     \
                ircd-german.lang    \
                ircd-norwegian.lang \
                ircd-russian.lang   \
                ircd-spanish.lang   \
                ircd-swedish.lang



install:
	mkdir -p $(messagedir);       
	-@echo    "Installing language files to $(messagedir)...";          \

	@for i in $(LANGFILES); do                                          \
		if test -f $(messagedir)/$$i; then                          \
			echo $(MV) $(messagedir)/$$i $(messagedir)/$$i.old; \
			$(MV) $(messagedir)/$$i $(messagedir)/$$i.old;      \
		fi;                                                         \
		echo $(INSTALL_DATA) $$i $(messagedir);                     \
		$(INSTALL_DATA) $$i $(messagedir);                          \
	done

	@if test "$(CLOBBER)" = "yes"; then \
		${RM} -f $(messagedir)/*.old; \
	fi

distclean:
	${RM} -f Makefile

build:

depend:

clean:
